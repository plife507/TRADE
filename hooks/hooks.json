{
  "hooks": [
    {
      "id": "trade-validation-reminder",
      "event": "PostToolUse",
      "tools": ["Edit", "Write"],
      "match": {
        "file_patterns": ["src/backtest/**/*.py", "src/tools/**/*.py"]
      },
      "script": "scripts/validation_reminder.py",
      "description": "Remind to run validation after editing backtest code"
    },
    {
      "id": "trade-security-scan",
      "event": "PreToolUse",
      "tools": ["Write", "Edit"],
      "match": {
        "content_patterns": ["API_KEY", "SECRET", "BYBIT", "password"]
      },
      "script": "scripts/security_scan.py",
      "description": "Block potential secrets in code"
    },
    {
      "id": "trade-todo-check",
      "event": "PreToolUse",
      "tools": ["Edit", "Write"],
      "match": {
        "file_patterns": ["src/**/*.py"]
      },
      "script": "scripts/todo_check.py",
      "description": "Remind about TODO-driven development"
    }
  ]
}
